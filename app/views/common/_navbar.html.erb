<div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
        <a class="navbar-brand" href="/"><img alt="Goodreads: Book reviews, recommendations, and discussion" src="https://ww2.sinaimg.cn/large/006tKfTcgy1fd31xjbrjvj300w00wq2r.jpg">
</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <ul class="nav navbar-nav">
            <li class="active">
                <a href="/products">全部商品</a>
            </li>
            <li class="active">
                <a href="/protfolio">时光机器</a>
            </li>

        </ul>

        <!--搜索框开始-->

        <style media="screen">
            .eveysearch {
                display: inline;
                position: absolute;
                z-index: 2;
                top: 8px;
                left: 350px;
            }
            @media(max-width:820px) {
                .eveysearch {
                    width: 50%;
                }

            }
            @media(max-width:580px) {
                .eveysearch {
                    width: 30%;
                }

            }
            @media(max-width:350px) {
                .eveysearch {
                    width: 20%;
                }

            }

        </style>

        <div class="eveysearch">
            <div class="col-md-6">
                <form class="products-search-form" action="/products/search" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="✓">
                    <div class="input-group">
                        <input type="text" class="form-control" name="q" value="" placeholder="Meet your next favorite book.">

                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                </form>
            </div>

            <!--搜索框结束-->

            <ul class="nav navbar-nav navbar-right" style="margin-right:30px;margin-top:-8px;">
                <li>

                    <a href="/carts">
                        购物车
                        <i class="fa fa-shopping-cart"></i>
                      ( <%= current_cart.products.count %> )
                    </a>
                </li>
                <li>
                    <a href="/favorites">
                        收藏夹
                        <i class="fa fa-gratipay" aria-hidden="true"></i>
                    </a>
                </li>
                <% if !current_user %>
                <li><%= link_to(content_tag(:i, "注册", class: 'fa fa-user-plus'), new_user_registration_path) %>
                </li>
                <li><%= link_to(content_tag(:i, '登入', class: 'fa fa-sign-in'), new_user_session_path) %></li>
            <% else %>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Hi!,
                        <%= current_user.email %>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <% if current_user.admin? %>
                        <li>
                            <%= link_to("Admin 选单", admin_products_path ) %>
                        </li>
                        <li>
                            <%= link_to("个人订单列表", account_orders_path ) %>
                        </li>
                        <% end %>
                        <li>
                            <%= link_to(content_tag(:i, '登出', class: 'fa fa-sign-out'), destroy_user_session_path, method: :delete) %>
                        </li>
                    </ul>
                </li>
                <% end %>

            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->

</div>
